include ~/.config/kitty/color.conf

# Font
font_family      MonaspaceRadonFrozen
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size        11.5
disable_ligatures never


# Transparency
background_opacity 1

# Borderless + no window decorations
hide_window_decorations yes

# Scrolling
scrollback_lines 10000
enable_audio_bell yes

# Performance
repaint_delay 10
input_delay 2
sync_to_monitor yes


# Allow REmote Control for Pywal
allow_remote_control yes


# Scrollbak 
scrollback_lines  10000
scrolback_indicator_opacity   0.7

map cmd+up scroll_line_up ðŸŽ
map cmd+down scroll_line_down ðŸŽ

# Enable mouse scrolling
mouse_hide_wait 0
wheel_scroll_multiplier 5.0 

# Hold Shift to scroll with mouse while in alternate screen (e.g., in Vim)
mouse_map Shift+Left press ungrabbed,grabbed mouse_scroll -10 0
mouse_map Shift+Right press ungrabbed,grabbed mouse_scroll 10 0
mouse_map Shift+Up press ungrabbed,grabbed mouse_scroll 0 -10
mouse_map Shift+Down press ungrabbed,grabbed mouse_scroll 0 10

# Hold Option (Alt) to drag scroll
mouse_map Alt+Left press ungrabbed,grabbed mouse_scroll -20 0
mouse_map Alt+Right press ungrabbed,grabbed mouse_scroll 20 0
mouse_map Alt+Up press ungrabbed,grabbed mouse_scroll 0 -20
mouse_map Alt+Down press ungrabbed,grabbed mouse_scroll 0 20


# Performance Tuning
sync_to_monitor no


# Terminal bell 
enable_audio_bell   yes
bell_on_tab         "ðŸ”” "
bell_path           ~/.config/FxP/sounds/bell-sounds/mixkit-attention-bell-ding-586.wav


# Window Layout
window_padding_width      15
confirm_os_window_close   0


# Advance
clipboard_control     write-clipboard write-primary read-clipboard-ask read-primary-ask
notify_on_cmd_finish  unfocused


# Copy to Clipboard 
map ctrl+shift+c copy_to_clipboard
map cmd+c copy_to_clipboard ðŸŽ

# Paste from Clipboard
map ctrl+shift+v paste_from_clipboard
map cmd+v paste_from_clipboard ðŸŽ



# === TAB BAR STYLE ===
tab_bar_min_tabs            1
tab_bar_edge                bottom
tab_bar_style               powerline
tab_powerline_style         slanted
tab_title_template          {title}{' :{}:'.format(num_windows) if num_windows > 1 else ''}
